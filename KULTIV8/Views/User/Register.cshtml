@model RegistrationModel;
@{
    Layout = null;
    ViewData["Title"] = "Registration";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KULTIV8</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/KULTIV8.styles.css" asp-append-version="true" />*@


    <style>
        body {
            margin: 0px;
            padding: 0px;
            background: #1C3242;
            opacity: 0.9;
        }

        .mid-box {
            background: rgb(255,255,255);
            width: 550px;
            margin-top: 5%;
            border-radius: 5%;
        }

        .title {
            color: #335976;
            font-size: 25px;
            font-weight: 600;
        }

        .sub-title {
            color: #244055;
            font-size: 25px;
            font-weight: 559;
        }

        .form-control {
            border: none;
            border-bottom: 3px solid;
            border-color: #1C3242;
            border-radius: 0%;
        }

            .form-control:focus {
                outline: none;
                box-shadow: none;
            }

        .btn-register {
            width: 100%;
            height: 40px;
            background-color: rgb(51, 89, 118);
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .error{
            color: red;
        }

    </style>
</head>


<body>

    <section class="form">
        <div class="container p-5">

            <div class="d-flex justify-content-center align-items-center">
                <div class="mid-box ">

                    <div class="d-flex justify-content-center mt-4">
                        <div class="title">
                            <p>Kultiv8 Consulting</p>
                        </div>

                    </div>

                    <div class="d-flex justify-content-center ">
                        <div class="sub-title">
                            <p>REGISTER</p>
                        </div>
                    </div>
                    <form class="row gx-1 ps-5 pe-5 pb-5 pt-3" asp-action="Register" asp-controller="User">


                        <div class="form-floating mb-3 col-md-6">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Username" asp-for="Username">
                            <span class="error" asp-validation-for="Username"></span>
                            <label for="floatingInput">Username</label>
                            
                        </div>
                                               

                        <div class="form-floating mb-3 col-md-6">
                            <input type="email" class="form-control" id="floatingInput" placeholder="Email Address" asp-for="Email">
                            <span class="error" asp-validation-for="Email"></span>
                            <label for="floatingInput">Email address</label>
                        </div>
                      
                        

                        <div class="form-floating mb-3 col-md-6">
                            <input type="password" class="form-control" id="floatingInput" placeholder="Password" asp-for="Password">
                            <span class="error" asp-validation-for="Password"></span>
                            <label for="floatingInput">Password</label>
                        </div>

                        <div class="form-floating mb-3 col-md-6">
                            <input type="password" class="form-control" id="floatingInput" placeholder="Confirm Password" asp-for="PasswordComfirm">
                            <span asp-validation-for="PasswordComfirm"></span>
                            <label for="floatingInput">Confirm Password</label>
                        </div>

                        <button class="btn-register mt-4" type="submit">Register</button>

                        @if (TempData["message"] != null)
                        {
                            <div class="msg pt-2">
                                @TempData["message"];
                            </div>
                        }

                        <div class="pt-3">
                            <p>Have an account? <span><a asp-action="Login" asp-controller="User">Login</a></span></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>





    </section>

</body>

</html>